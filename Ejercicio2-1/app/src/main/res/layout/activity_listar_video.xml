<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityListarVideo">

    <Button
        android:id="@+id/aclbtnAtras"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#E45C5C"
        app:icon="@android:drawable/ic_menu_revert" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione un video" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aclbtnVerVideo"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#2BAFC1"
            android:text="Ver"
            app:icon="@android:drawable/ic_menu_view" />
    </LinearLayout>

    <Spinner
        android:id="@+id/aclSpinner"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_weight="1" />

    <VideoView
        android:id="@+id/aclVideoViwer"
        android:layout_width="match_parent"
        android:layout_height="560dp" />

</LinearLayout>